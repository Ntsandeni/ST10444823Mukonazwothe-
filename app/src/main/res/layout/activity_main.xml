<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFB"
    android:backgroundTint="#C1E5EA"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtH1"
        android:layout_width="334dp"
        android:layout_height="161dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="41dp"
        android:fontFamily="@font/baloo_tamma"
        android:text="My Tamagotchi"
        android:textAlignment="center"
        android:textColor="#F4FF81"
        android:textSize="54sp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="380dp"
        android:layout_height="337dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtH1"
        app:srcCompat="@drawable/wavingapollo112" />

    <TextView
        android:id="@+id/txtApollo"
        android:layout_width="324dp"
        android:layout_height="109dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/baloo_tamma"
        android:text="APOLLO"
        android:textAlignment="center"
        android:textColor="#F4FF81"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="246dp"
        android:layout_height="96dp"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="28dp"
        android:text="Press to play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>